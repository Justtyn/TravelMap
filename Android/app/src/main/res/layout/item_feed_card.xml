<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivCover"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/feed_item_image_desc"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_placeholder"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.SmallComponent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitle"
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    tools:text="城市漫步：探索北京故宫" />

                <TextView
                    android:id="@+id/tvPrice"
                    style="@style/TextAppearance.Material3.TitleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="¥199"
                    tools:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDesc"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="世界文化遗产之一，拥有壮丽的宫殿建筑，是旅行和文化爱好者的必去之地。" />

            <TextView
                android:id="@+id/tvAddress"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_place"
                tools:text="上海市黄浦区中山东一路"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvLatLng"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_location"
                tools:text="31.2304, 121.4737"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvStock"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawablePadding="4dp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_inventory"
                tools:text="库存：20"
                tools:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
