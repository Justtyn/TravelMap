<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Widget.Material3.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:navigationIcon="@drawable/ic_arrow_back"
        android:title="@string/title_order_detail"
        app:navigationIconTint="?attr/colorOnSurface" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/orderDetailContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true"
        android:paddingBottom="24dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvOrderStatus"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="状态：CREATED" />

            <TextView
                android:id="@+id/tvOrderNo"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="订单号：202405100001" />

            <TextView
                android:id="@+id/tvOrderCreateTime"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="创建时间：2025-05-10 09:00" />

            <TextView
                android:id="@+id/tvOrderCheckin"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone"
                tools:text="入住：2025-05-20" />

            <TextView
                android:id="@+id/tvOrderCheckout"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:visibility="gone"
                tools:text="离店：2025-05-21" />

            <TextView
                android:id="@+id/tvOrderContact"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                tools:text="收货人：张三" />

            <TextView
                android:id="@+id/tvOrderPhone"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="联系方式：13800000000" />

            <TextView
                android:id="@+id/tvOrderTotal"
                style="@style/TextAppearance.Material3.TitleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                tools:text="订单金额：¥599.00" />

            <TextView
                android:id="@+id/tvMapSectionTitle"
                style="@style/TextAppearance.Material3.TitleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/order_detail_map_title"
                android:visibility="gone" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/orderMapCard"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="false">

                <com.amap.api.maps.MapView
                    android:id="@+id/orderMapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tvOrderMapHint"
                    style="@style/TextAppearance.Material3.LabelMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="12dp"
                    android:background="@drawable/bg_marker_card"
                    android:padding="8dp"
                    android:text="@string/order_detail_map_empty"
                    android:textColor="@android:color/white"
                    tools:text="正在加载坐标..." />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvItemsTitle"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/order_detail_items" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOrderItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_order_product" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/orderDetailProgress"
        style="@style/Widget.Material3.CircularProgressIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
